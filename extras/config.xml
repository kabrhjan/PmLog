<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="7.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PmLog7</name>
    <description>
        A free application that measures the air pollution of particulate matter.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
    <!--https://cordova.apache.org/docs/en/4.0.0/config_ref/images.html-->
        <allow-intent href="market:*" />
        <splash src="image_bg.png" />
        <icon src="image_bg.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AndroidPersistentFileLocation" value="Internal" />
</widget>
